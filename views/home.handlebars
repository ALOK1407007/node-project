<div class="form-container">
     <form action="/task-manager/task" id="form" method="post">
        <h1>Task Manager</h1>
        <label for="task">Task</label>
        <input type="text" name="task" id="task">
        <button type="submit">Add Task</button>
     </form>
</div>

<div class="container">
   <h3>List of tasks</h3>
  <table>
    <tr>
      <th>taskname</th>
      <th>updatetask</th>
      <th>deletetask</th>
    </tr>
    {{#each tasks}}
    <tr>
      <td>{{task}}</td>
      <td><a href="/task-manager/task/{{_id}}"><i class="fa-duotone fa-pen-to-square"></i></a></td>
      <td>
        <form method="POST" action="/task-manager/task/{{_id}}?_method=DELETE"
        enctype="application/x-www-form-urlencoded">
         <input type="hidden" name="_method" value="DELETE">
         <button type="submit"><i class="fa-solid fa-trash-can" id="delete"></i></button>
        </form>
      </td>
    </tr>
    {{/each}}
  </table>
</div>